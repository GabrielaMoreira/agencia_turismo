<!DOCTYPE html>
<html lang="en">

<%= render 'header'%>

<body class="">
  <div class="wrapper">
    <%= render 'sidebar'%>
    <div class="main-panel">
      <% if notice %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="material-icons">close</i>
        </button>
        <span>
          <b> Success - </b><%= notice %></span>
      </div>
      <% end %>
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title">Clientes</h4>
                  <p class="card-category">Clientes cadastrados no sistema</p>
                </div>
                <div class="card-body">
                  <div class="text-center">
                    <a href="<%= new_cliente_path %>">Cadastrar novo cliente</a>
                  </div>
                  <div class="table-responsive">
                    <table class="table">
                      <thead class=" text-primary">
                          <tr>
                            <th>Cpf</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Telefone</th>
                            <th colspan="3"></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% @clientes.each do |cliente| %>
                            <tr>
                              <td><%= cliente.cpf %></td>
                              <td><%= cliente.nome %></td>
                              <td><%= cliente.email %></td>
                              <td><%= cliente.telefone %></td>
                              <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
                              <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            </tr>
                          <% end %>
                        </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%= render 'footer'%>

    </div>
  </div>
</body>

</html>
