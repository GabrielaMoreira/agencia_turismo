<p id="notice"><%= notice %></p>

<h1>Hoteis</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Categoria</th>
      <th>Endereco</th>
      <th>Cidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hoteis.each do |hotel| %>
      <tr>
        <td><%= hotel.nome %></td>
        <td><%= hotel.categoria %></td>
        <td><%= hotel.endereco %></td>
        <td><%= hotel.cidade %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

