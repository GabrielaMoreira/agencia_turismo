<%= form_with(model: compra, local: true) do |form| %>
  <% if compra.errors.any? %>
    <div id="error_explanation">
      <h6><%= t('error', count: compra.errors.count) %> que esse compra fosse salvo:</h6>

      <ul>
      <% compra.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :cpf_cliente %>
    <%= form.text_field :cpf_cliente %>
  </div>

  <div class="field">
    <%= form.label :pacote_id %>
    <%= form.text_field :pacote_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
