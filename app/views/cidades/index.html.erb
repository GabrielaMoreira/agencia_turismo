<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-primary">
            <h4 class="card-title">Cidades</h4>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table">
                <thead class=" text-primary">
                    <tr>
                      <th>Nome</th>
                      <th>Estado</th>
                      <th>População</th>
                      <th>Nº restaurantes</th>
                      <th>Nº hoteis</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @cidades.each do |cidade| %>
                      <tr>
                        <td><%= cidade.nome %></td>
                        <td><%= cidade.estado %></td>
                        <td><%= cidade.populacao %></td>
                        <td><%= cidade.hoteis.length %></td>
                        <td><%= cidade.restaurantes.length %></td>
                        <td><%= link_to 'Show', cidade %></td>
                        <td><%= link_to 'Edit', edit_cidade_path(cidade) %></td>
                        <td><%= link_to 'Destroy', cidade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
