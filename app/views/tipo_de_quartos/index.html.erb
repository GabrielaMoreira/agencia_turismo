<h1>Tipo De Quartos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor diaria</th>
      <th>Hotel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_de_quartos.each do |tipo_de_quarto| %>
      <tr>
        <td><%= tipo_de_quarto.nome %></td>
        <td><%= tipo_de_quarto.valor_diaria %></td>
        <td><%= tipo_de_quarto.hotel %></td>
        <td><%= link_to 'Show', tipo_de_quarto %></td>
        <td><%= link_to 'Edit', edit_tipo_de_quarto_path(tipo_de_quarto) %></td>
        <td><%= link_to 'Destroy', tipo_de_quarto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

